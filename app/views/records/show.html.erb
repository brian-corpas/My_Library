 <body class="colorchange7">
      
       <div class="bookcards_show">
          <div class="d-flex justify-content-center" style="margin-top: 5%">
          <div class="row no-gutters">
           <div class="col-md-4">
        <% if @record.photo.attached? %>
           <div class="card-img-top d-flex justify-content-left mt-3 mb-2" style="margin-top: 5%"><%= cl_image_tag @record.photo.key, height: 380, width: 270, crop: :fill %></div>
           <% else %>
              <div class="card-img-top d-flex justify-content-left mt-3 mb-2"><%= image_tag 'bookcovernot.png' %>
              </div>
        <% end %>
        </div>
       </div>
      </div>
      <div class="container mt-2">
        <div class="row d-flex justify-content-center">
           <div class="col-align-self-center">
              <h4 class="card-title"><strong>Title:</strong> <%= @record.title %></h4>
              <h5 class="card-text"><strong>Artist:</strong> <%= @record.artist %></h5>
             
           </div>
          </div>
        </div>
        <br>
 <div>
                <div class="d-flex justify-content-center">
                  <div class="flex-sm-row">
                        <%= link_to "Delete",
                        user_record_path(current_user.id, @record), class: "btn btn-danger",
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
                        <%= link_to "Update", edit_user_record_path(current_user.id, @record), class: "btn btn-info" %></button>
                    
          
                      </div>
                  </div>

<br>
       <div class="commentbox">
         <div class="container mt-2">
           <div class="row d-flex justify-content-center">
             <div class="col-align-self-center">
               <% if @record.info.present? %>
                 <h6><strong>Info:</strong></h6>
                 <p><%= @record.info %></p>
               <% else %>
                 <h5>Update record information</h5>
              <% end %>
        </div>
      </div>
    </div>
    </div>

   </div>
  </div>
 </div>





<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-align-self-center">
      <div style="margin-top: 10%">
            <%= link_to "Back", user_records_path(current_user.id), class: "btn btn-light"%>
      </div>
    </div>
  </div>
</div>


</body>