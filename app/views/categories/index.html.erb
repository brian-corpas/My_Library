<body class="colorchange5">
<p id="notice"><%= notice %></p>



<div class="row d-flex justify-content-center" style="margin-top: 5%">
  <div class="book_categories">
    <h3>Book Categories</h3>
  </div>
</div>

<div class="container">
  <div class="row w-100">
    <div class="col-xs-12 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 p-0">
      <div class="form-login">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Options</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.name, category %></td>
            
              <%# <td><%= link_to 'Show', category %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>

<div class="row d-flex justify-content-center" style="margin-top: 5%">
  <%= link_to 'New Category', new_category_path, class: "btn btn-info" %>
</div>

</body>