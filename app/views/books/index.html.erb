     <div class="bookcards">
      <% @books.order('title ASC').each do |book| %>
            <div class="card mb-3" style="max-width: 540px;">
               <div class="backgroundcard">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <% if book.photo.attached? %>
                    <div class="card-img-top d-flex justify-content-left mt-3 mb-2"><%= cl_image_tag book.photo.key, height: 170, width: 120, crop: :thumb %></div>
                  <% end %>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                   <!-- <a href="<%= user_book_path(current_user.id, book) %>" class="stretched-link"></a> -->
                    <h5 class="card-title"><strong>Title:</strong> <%= book.title %></h5>
                    <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-around">
                  <%= link_to "Delete",
                    user_book_path(current_user.id, book), class: "btn btn-ghost-danger",
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
                    <%= link_to "Update", edit_user_book_path(current_user.id, book), class: "btn btn-ghost" %></button>
                    <%= link_to "Loan", new_user_book_loan_path(current_user.id, book, @loan), class: "btn btn-ghost" %></button>
                </div>
             </div>
             </div>
            <% end %>
        </div>
      </div>
    </div>
   </div>


<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-align-self-center">
      <div style="margin-top: 20%">
            <%= link_to "Back", root_path, class: "btn btn-outline-dark"%>
      </div>
    </div>
  </div>
</div>









