<div class="update_book">
<div class="container" style="margin-top: 10%">
  <div class="row w-100">
    <div class="col-xs-12 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 p-0">
      <div class="form-login">
       <h3 style="text-align: center;">UPDATE BOOK</h3>
    <%= simple_form_for [@user, @book] do |f| %>
      <%= f.input :title, label: "TITLE" %>
      <%= f.input :author, label: "AUTHOR"%>
      <%= f.input :photo, as: :file %>
      <%= f.input :comments, :as => :text, label: "Leave your notes on the book here", input_html: {style: 'height:100px;'} %>

      <div class="row d-flex justify-content-center">
        <div class="col-align-self-center">
          <div style="margin-top: 20%">
             <%= f.button :submit, "Submit", class: "btn btn-outline-success" %>
          </div>
        </div>
      </div>
    <% end %>
      <div class="container mt-2">
        <div class="row d-flex justify-content-center">
          <div class="col-align-self-center">
            <div style="margin-top: 15%">
                  <%= link_to "Back", user_book_path, class: "btn btn-outline-dark"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>
</div>
