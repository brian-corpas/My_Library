<body class="colorchange4">

<div class="wishlist_background">
  <div class="btn_wishlist">
    <%= link_to "New Item", new_user_wishlist_path(current_user.id), class: "btn btn-success"%>
  </div>



  <h3 class="row d-flex justify-content-center" style="margin-bottom: 3%"><u>WISHLIST</u></h3>
   
    <% @wishlists.order('created_at DESC').each do |wishlist| %>
      <div class="bookcards_show">
        <div class="d-flex justify-content-center">
          <div class="row no-gutters">
           <div class="col-md-4">
        <% if wishlist.photo.attached? %>
           <div class="card-img-top d-flex justify-content-left mt-3 mb-2" style="margin-top: 5%"><%= cl_image_tag wishlist.photo.key, height: 380, width: 270, crop: :fill %></div>
           <% else %>
              <div class="card-img-top d-flex justify-content-left mt-3 mb-2"><%= image_tag 'bookcovernot.png' %>
              </div>
        <% end %>
        </div>
       </div>
      </div>
      <div class="container mt-2">
        <div class="row d-flex justify-content-center">
           <div class="col-align-self-center">
              <h4 class="card-title"><strong>Title:</strong> <%= wishlist.title %></h4>
              <h5 class="card-text"><strong>Author:</strong> <%= wishlist.author %></h5>
           </div>
          </div>
        </div>

                <div class="d-flex justify-content-center">
                  <div class="flex-sm-row">
                        <%= link_to "Delete",
                        user_wishlist_path(current_user.id, wishlist), class: "btn btn-outline-danger",
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>   
                        
                      </div>
                  </div>
                   <p class="row d-flex justify-content-center"><strong>--------------------------------------</strong></p> 
            </div>
           <% end %>
           

<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-align-self-center">
      <div style="margin-top: 50%">
            <%= link_to "Back", root_path, class: "btn btn-outline-dark"%>
      </div>
    </div>
  </div>
</div>

</div>

</body>