                      <%= cl_image_tag current_user.photo.key, height: 40, width: 50, crop: :thumb, gravity: :face, radius: :max, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
