                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "Comics", user_comics_path(current_user.id), class: "dropdown-item" %>
                  <%= link_to "New Comic", new_user_comic_path(current_user.id), class: "dropdown-item" %>
