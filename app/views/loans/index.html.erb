<div class="loan_book_index">
<div class="container" style="margin-top: 10%">
  <h3 class="row d-flex justify-content-center" style="margin-bottom: 10%"><u>BOOK LOANS</u></h3>
    <div class="row w-100">
      <div class="col-xs-12 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 p-0">
         <% @loans.order('created_at DESC').each do |loan| %>
          <div class="card mb-3" style="max-width: 540px;">
          <div class="backgroundcard">
            <div class="row no-gutters">
              <div class="col-md-4">
                <% if loan.book.photo.attached? %>
                  <div class="card-img-top d-flex justify-content-left mt-3 mb-2"><%= cl_image_tag loan.book.photo.key, height: 170, width: 120, crop: :thumb %></div>
                <% end %>
              </div>
              <div class="col-md-8">

                <div class="card-body">
                  <h4 class="card-title"><strong>Title:</strong> <%= loan.book.title %></h4>
                  <h5 class="card-title"><strong>Name:</strong> <%= loan.name %></h5>
                  <p class="card-title"><strong>Loan date:</strong> <%= loan.date %></p>
                </div>
                <div class="d-flex justify-content-center">
                  <%= link_to "Delete Loan",
                  user_book_loan_path(current_user.id, :book_id, loan), class: "btn btn-ghost-danger",
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
                </div>
              </div>
             </div>
             </div>
            </div>
           <% end %>
    </div>
  </div>

<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-align-self-center">
      <div style="margin-top: 50%">
            <%= link_to "Back", root_path, class: "btn btn-outline-dark"%>
      </div>
    </div>
  </div>
</div>

</div>




