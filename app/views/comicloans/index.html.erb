

<div class="container" style="margin-top: 15%">
  <h3 class="row d-flex justify-content-center"><u>COMIC LOANS</u></h3>
    <div class="row w-100">
      <div class="col-xs-12 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 p-0">
         <% @comicloans.order('created_at DESC').each do |comicloan| %>
          <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <% if comicloan.comic.photo.attached? %>
                  <div class="card-img-top d-flex justify-content-left mt-3 mb-2"><%= cl_image_tag comicloan.comic.photo.key, height: 170, width: 120, crop: :thumb %></div>
                <% end %>
              </div>
              <div class="col-md-8">

                <div class="card-body">
                  <h4 class="card-title"><strong>Title:</strong> <%= comicloan.comic.title %></h4>
                  <h5 class="card-title"><strong>Name:</strong> <%= comicloan.name %></h5>
                  <p class="card-text"><strong>Loan date:</strong> <%= comicloan.date %></p>
                </div>
                <div class="d-flex justify-content-center">
                  <%= link_to "Delete Loan",
                  user_comic_comicloan_path(current_user.id, :comic_id, :comicloan_id), class: "btn btn-ghost-danger",
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
                </div>
              </div>
             </div>
            </div>
           <% end %>
    </div>
  </div>

<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-align-self-center">
      <div style="margin-top: 20%">
            <%= link_to "Back", root_path, class: "btn btn-outline-dark"%>
      </div>
    </div>
  </div>
</div>